<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:background="@drawable/play1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnPlay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="play" />
    <Button
        android:background="@drawable/pause"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btPausen"
        android:layout_alignBottom="@+id/btnStop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="pause" />

    <Button
        android:background="@drawable/stop"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnStop"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="stop" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Audio"
        android:id="@+id/btnSelectAudio"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignStart="@+id/btnStop"
        android:onClick="selectAudio" />


</RelativeLayout>